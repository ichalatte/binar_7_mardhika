<% if(msg == 'error') { %>
<div class="alert alert-secondary" role="alert">Coba Lagi!!</div>
<% } %> <% if(msg == 'exist') { %>
<div class="alert alert-secondary" role="alert">Data sudah ada!</div>
<% } %> <% if(msg == 'created') { %>
<div class="alert alert-primary" role="alert">Data berhasil dibuat !</div>
<% } %> <% if(msg == 'updated') { %>
<div class="alert alert-primary" role="alert">Data berhasil di update !</div>
<% } %> <% if(msg == 'deleted') { %>
<div class="alert alert-danger" role="alert">Data berhasil di hapus !</div>
<% } %> <% if(msg == 'login') { %>
<div class="alert alert-primary" role="alert">Login berhasil</div>
<% } %>

<style>
  .alert {
    position: absolute;
    right: 3rem;
    width: 20rem;
    bottom: 3rem;
    margin: auto;
    text-align: center;
  }
</style>

<script>
  const alert = document.querySelector(".alert");

  setTimeout(() => {
    alert ? (alert.style.display = "none") : null;
  }, 3000);
</script>
